RelativeLayout:
    isleapyear: 1
    userinput: 0
    frog: frog
    textinput: textinput

    FloatLayout:
        Image:
            source: "./asset/lily.jpeg"
            color: 1,1,1,.3

    Image:
        id: frog
        source: "./asset/frog-29-nobg.png"
        size_hint: None, None
        size: dp(128), dp(128)
        pos_hint: {'center_x': .5,'center_y': .7}
        opacity: root.isleapyear

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5,'center_y': .5}
        size_hint: None, None
        size: self.minimum_width, self.minimum_height
        Label:
            text: "Enter your desired year to compute"
            size_hint: None, None
            size: dp(min(root.width-64, 256)), dp(32)
            text_size: dp(min(root.width-64, 256)), dp(32)
            halign: "left"
        TextInput:
            id: textinput
            hint_text: "Enter Year Here..."
            size_hint: None, None
            size: dp(min(root.width-64, 256)), dp(32)
            on_text: app.calc(self.text)
            background_color: .3, .8, 1, .25
            hint_text_color: 1, 1, 1, 1
            foreground_color: 1, 1, 1, 1

    Label:
        canvas.before:
            Color:
                rgba: .3, .8, 1, .25
            Rectangle:
                size: self.size
                pos: self.pos
        text: f"{root.userinput} Is a Leap Year!" if root.isleapyear else f"{root.userinput} Not a Leap Year."
        size_hint: None, None
        size: dp(self.texture_size[0]+32), dp(self.texture_size[1]+32)
        pos_hint: {'center_x': .5,'center_y': .3}