#:import Clipboard kivy.core.clipboard.Clipboard

BoxLayout:
    orientation: 'vertical'
    Label:
        text: "Enter text to translate." if app.to_morsecode else "Enter [ '.' ] for short or [ '-' ] for long or [ '$' ] for space)"
        size_hint: None, 1
        width: root.width

    TextInput:
        id: userinput
        hint_text: "Enter your input here"    
        on_text: app.translate(self.text)
        font_size: sp(32)

    Button:
        text: "Invert"
        on_release: app.invert()

    Label:
        text: "Output: "
        size_hint: None, 1
        width: root.width

    TextInput:
        text: app.result
        disabled: True
        font_size: sp(32)

    Button:
        text: "Copy Result"
        on_release: Clipboard.copy(app.result)

    Button:
        text: "Quit"
        on_release: app.stop()